@model PagedList.IPagedList<ERPBO.ControlPanel.ViewModels.RoleViewModel>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "User Role List";
    int sl = 0;
    var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;
}

<div class="row">
    <div class="col-md-12 text-center">
        <h4><b style="color:darkblue">List Of User Roles</b></h4>
        <hr />
    </div>
    <div class="col-md-12 mb-2">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="search" id="searchBy" class="form-control form-control-sm" placeholder="Search By Anything" onkeyup="tableFilter('#tblRoleData tbody tr',this)" />
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                @if (privilege != null && privilege.Add)
                {
                    <button class="btn btn-primary btn-sm float-lg-right" style="background-color:darkblue" id="btnAddNew"><i class="fa fa-plus"></i> Create Role</button>
                }
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered table-sm table-striped table-responsive-lg" id="tblRoleData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>SL No.</th>
                    <th class="hide"></th>
                    <th>Role Name</th>
                    <th class="hide"></th>
                    <th>Organization Name</th>
                    <th>Entry User</th>
                    <th>Update User</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    sl = sl + 1;
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td class="hide">@role.RoleId</td>
                        <td>@role.RoleName</td>
                        <td class="hide">@role.OrganizationId</td>
                        <td>@role.OrganizationName</td>
                        <td class="text-center text-sm">@role.EntryUser</td>
                        <td class="text-center text-sm">@role.UpdateUser</td>
                        <td class="text-center">
                            @if (privilege != null && privilege.Edit)
                            {
                                <a href="#" class="btn btn-warning btn-sm data-edit-item" data-edit-item="@role.RoleId"><i class="fa fa-pen"></i> Edit</a>

                            }
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="8">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalRole" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header alert-primary">
                <h4 id="modalHeading" class="modal-title"><i class="fas fa-angle-double-right"></i><span id="spanModalHead">Add New Role</span></h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form id="frmRole">
                    <input type="hidden" name="Id" id="hdfRoleId" />
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="txtRoleName" class="control-label font-weight-bold">Role Name</label>
                            <input type="text" name="role" value="" id="txtRoleName" class="form-control form-control-sm" />
                            <span class="error hide required-roleName font-weight-bold">Input Role Name!</span>
                            <span class="error hide duplicate-roleName font-weight-bold">Already RoleName Exist!</span>
                            <span class="error hide invalid-roleName font-weight-bold">Invalid Role!</span>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <div class="col-md-6">
                    <div id="msg1" class="alert alert-success hide float-left">
                        Data has been saved Successful!
                    </div>
                    <div id="msg2" class="alert alert-danger hide float-left">
                        Data has been failed to save!
                    </div>
                </div>
                <button type="button" class="btn btn-sm btn-danger float-right" data-dismiss="modal" data-target="#"><i class="fas fa-times"></i> Cancel </button>
                <button type="submit" class="btn btn-sm btn-success float-right" id="btnSubmit"><i class="far fa-save"></i> <span id="spanSaveText">Save</span> </button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        var hdfRoleId = $("#hdfRoleId");
        var txtRoleName = $("#txtRoleName");

        $(document).ready(function () {
            $('#tblRoleData').DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": false,
                "autoWidth": false,
            });
        })

        function OpenModal() {
            $("#spanModalHead").text('Add New Role');
            $("#spanSaveText").text('Save');
            $("#modalRole").modal("show");
            $(".error").addClass("hide");
        }

        $("#btnAddNew").click(function (e) {
            e.preventDefault();
            OpenModal();
            clearCtrl();
        })

        function validateForm() {
            $(".error").addClass("hide");
            var isValid = true;
            if ($.trim(txtRoleName.val()) == "") {
                $(".required-roleName").removeClass("hide");
                isValid = false;
            }
            else {
                var id = TryParseInt(hdfRoleId.val(), 0);
                if (txtRoleName.val() === 'System Admin') {
                    $(".invalid-roleName").removeClass("hide");
                    isValid = false;
                }
                else {
                    if (ajaxBooleanChecker(JSON.stringify({ roleId: id, roleName: txtRoleName.val().trim(),orgId:'@User.OrgId' }), '/Common/IsDuplicateRoleName', getToken()) == true) {
                        $(".duplicate-roleName").removeClass("hide");
                        isValid = false;
                    }
                }

            }
            return isValid;
        }

        //Data add
        $("#btnSubmit").click(function (e) {
            e.preventDefault();
            $(".error").addClass("hide");
            if (validateForm() == true) {
                var data = JSON.stringify({
                    RoleId: TryParseInt(hdfRoleId.val(), 0),
                    RoleName: txtRoleName.val(),
                    OrganizationId: '@User.OrgId',
                });
                console.log(data);
                $.when(postReqWithToken(dataType.applicationJson, dataType.json, 'POST', '/ControlPanel/SaveUserRole', data, getToken())).then(function (res, status) {
                    console.log(status);
                    console.log(res);
                    if (res == true) {
                        message("#msg1", "#modalRole");
                    }
                    else {
                        message("#msg2");
                    }
                    enable("#btnSubmit");
                }).fail(function (err) {
                    console.log(err);
                    enable("#btnSubmit");
                });
            }
        })

        $(document).on("click", "a.data-edit-item", function (e) {
            e.preventDefault()
            clearCtrl();
            var row = $(this).parent().parents('tr');
            var td1 = row.find('td:eq(1)').html();
            var td2 = row.find('td:eq(2)').html();
            var td3 = row.find('td:eq(3)').html();

            hdfRoleId.val(td1);
            txtRoleName.val(td2);
        })
        function clearCtrl() {
            hdfRoleId.val('0');
            txtRoleName.val('');
        }
        $(".data-edit-item").click(function (e) {
            e.preventDefault()
            OpenModal()
            $("#spanModalHead").text('Update Role');
            $("#spanSaveText").text('Update');
        });

    </script>
}
