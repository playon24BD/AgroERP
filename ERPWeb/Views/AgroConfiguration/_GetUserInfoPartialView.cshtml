@model IEnumerable<ERPBO.Agriculture.ViewModels.UserInfoViewModel>

@{
    ViewBag.Title = "_GetUserInfoPartialView";
    var SL = 0;
    var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblUserData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">User Name</th>
                    <th style="vertical-align:middle">DepartMent Name</th>
                    <th style="vertical-align:middle">Designation Name</th>
                    @*<th style="vertical-align:middle">Mobile Number</th>
                    <th style="vertical-align:middle">Address</th>
                    <th style="vertical-align:middle">Email</th>*@
                    <th style="vertical-align:middle">Status</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.UserId</td>
                        <td class="text-center">@item.UserName</td>
                        <td class="text-center">@item.DepartmentName</td>
                        <td class="text-center">@item.Designation</td>
                        @*<td class="text-center">@item.MobileNumber</td>
                        <td class="text-center">@item.Address</td>
                        <td class="text-center">@item.Email</td>*@
                        <td class="text-center">@item.Status</td>

                        <td class="text-center">

                            <a href="#" class="btn btn-warning btn-sm data-edit-item-UserId" title="Edit" data-edit-item-UserId="@item.UserId" style="line-height:1">
                                <i class="fas fa-pen"></i>Edit
                            </a>

                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>


