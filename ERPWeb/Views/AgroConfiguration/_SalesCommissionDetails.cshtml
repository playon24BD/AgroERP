@model IEnumerable<ERPBO.Agriculture.ViewModels.CommisionOnProductSalesDetailsViewModel>

@{
    string badge = string.Empty;
    int sl = 0;
}

<div class="col-md-12">
    <table class="table table-bordered table-striped table-hover table-sm text-sm">
        <thead class="btn-dark">
            <tr class="text-center">
                <td style="vertical-align:middle">#Sl</td>
                <td style="vertical-align:middle">Product Name</td>
                <td style="vertical-align:middle">Unit</td>
                <td style="vertical-align:middle">Payment Method</td>
                <td style="vertical-align:middle">Total Commission</td>
                <td style="vertical-align:middle">Entry Date</td>


            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    badge = item.PaymentMode == "Credit" ? "badge bg-warning" : (item.PaymentMode == "Cash" ? "badge bg-success" : "");

                    sl++;
            <tr>
                <td class="text-center">@sl</td>


                <td class="text-center">@item.FinishGoodProductName</td>
                <td class="text-center">@item.Flag</td>
                <td class="text-center ">
                    <span class="@badge">@item.PaymentMode</span>
                </td>
                <td class="text-center">@item.TotalCommission</td>
                <td class="text-center">@item.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
                @*<td class="text-center hide">@item.CommissionOnProductOnSalesId</td>*@

            </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No Data found</td>
                </tr>

            }




        </tbody>

    </table>

</div>

