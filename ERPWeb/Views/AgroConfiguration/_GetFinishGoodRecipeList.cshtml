@model IEnumerable<ERPBO.Agriculture.ViewModels.FinishGoodRecipeInfoViewModel>

@{
    ViewBag.Title = "_GetFinishGoodRecipeList";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    //var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = 0;
    var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;
}

<table class="table table-bordered table-sm table-striped table-responsive-lg text-sm" id="tblFinishGoodRecipeList">
    <thead class="btn-dark">
        <tr class="text-center text-bold">
            <th style="vertical-align:middle">#SL</th>
            <th style="vertical-align:middle" class="hide"></th>
            <th style="vertical-align:middle">Product Name</th>
            <th style="vertical-align:middle">Product Qty</th>
            <th style="vertical-align:middle">Product Unit</th>
            <th style="vertical-align:middle">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center text-bold">@sl</td>
                <td class="hide">@item.FGRId</td>
                <td class="text-center">@item.FinishGoodProductName</td>
                <td class="text-center">@item.FGRQty</td>
                <td class="text-center">@item.FGRUnit</td>

                <td class="text-center">
                    @*@if (privilege != null && privilege.Detail)
                    {*@
                        <a href="#" class="btn btn-sm btn-outline-secondary data-item-detail" title="View Detail" data-item-detail="@item.FGRId" style="line-height:1">
                            <i class="fas fa-eye"></i>
                        </a>
                    @*}
                    @if (privilege != null && privilege.Edit)
                    {*@
                        <a href="#" class="btn btn-sm btn-outline-warning data-item-edit" title="Edit" data-edit-item="@item.FGRId" style="line-height:1">
                            <i class="fas fa-pen"></i>
                        </a>
                    @*}
                    @if (privilege != null && privilege.Delete)
                    {*@
                        <a href="#" class="btn btn-sm btn-outline-danger data-item-del" title="Delete" data-del-item="@item.FGRId" style="line-height:1">
                            <i class="fas fa-trash"></i>
                        </a>
                    @*}*@

                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center text-bold">
                <td colspan="11">No data found in the table</td>
            </tr>
        }
    </tbody>
</table>

