@model IEnumerable<ERPBO.Agriculture.ViewModels.PRawMaterialStockInfoViewModel>

@{
    ViewBag.Title = "List of RawMaterial PurChase";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblTerritoryData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Supplier Name</th>
                    <th style="vertical-align:middle">PO Number</th>
                    <th style="vertical-align:middle">Invoice NO</th>
                    <th style="vertical-align:middle">Invoice Date</th>
                    <th style="vertical-align:middle">Chalan No</th>
                    <th style="vertical-align:middle">EntryDate</th>
                    <th style="vertical-align:middle">Total Amount</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.PRawMaterialStockId</td>
                        <td class="hide">@item.RawMaterialSupplierId</td>
                        <td class="text-center">@item.RawMaterialSupplierName</td>
                        <td class="text-center">@item.BatchCode</td>
                        <td class="text-center">@item.InvoiceNo</td>
                        <td class="text-center">@item.InvoiceDate</td>
                        <td class="text-center">@item.ChalanNo</td>
                        <td class="text-center">@item.ChalanDate</td>
                        <td class="text-center">@item.TotalAmount</td>
                        <td class="text-center">
                            @*<a href="#" class="btn btn-warning btn-sm data-item-detail" style="line-height:1" data-item-detail="@item.PRawMaterialStockId"><i class="fa fa-pen"></i> Details</a>*@
                            <a href="#" class="btn btn-sm btn-outline-warning data-item-detail" title="View Detail" data-item-detail="@item.PRawMaterialStockId" style="line-height:1">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>