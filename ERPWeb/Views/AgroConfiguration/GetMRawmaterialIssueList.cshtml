@section scripts{
    <script type="text/javascript">


        var ddlRawMaterial = $("#ddlRawMaterial");
        //var ddlrmnqty = $("#ddlrmnqty");
        var ddlqty = $("#ddlqty");
        var ddlUnitName = $("#ddlUnitName");
        var ddlUnitID = $("#ddlUnitID");
        var ddlRawMaterialList = [];
        var searchByAny = $("#searchByAny");

        var searchByAnyy = $("#searchByAnyy");

        var RawMaterialStockQty = $("#RawMaterialStockQty");




        $(document).ready(function () {
            $('.select2').select2();

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });
            $("#btnSubmit").hide();

            LoadDataTableStock();
            LoadDataTable();

            //$("#cardWithOutRequisition").hide();
            //$("#cardWithRequisition").hide();
            //$("#tblWithOutRequistion").hide();
            //$("#tblWithRequistion").hide();

          
        })

        //$('input[type=radio][name=optradio]').change(function () {
        //    if (this.value == 'Requistion') {
        //        $("#cardWithOutRequisition").hide();
        //        $("#tblWithOutRequistion").hide();
        
        //    }
        //    else if (this.value == 'WithOutRequisition') {

        //        $("#cardWithOutRequisition").show();
        //        $("#tblWithOutRequistion").show();
        //    }
        //});

        //material change
        ddlRawMaterial.change(function () {


            var data = { RawMaterialId: ddlRawMaterial.val() };

            $.when(getReqWithData('Html', "Get", "/AgroConfiguration/RawMaterialStockLoadUnitName", data)).then(function (res, status) {


                consoleLog(res.replace(/['"]+/g, ''));
                var unit = res.replace(/['"]+/g, '');
                ddlUnitName.val(res.UnitName);
                ddlUnitName.val(unit);

            });
            $.when(getReqWithData('Html', "Get", "/AgroConfiguration/RawMaterialStockLoadUnitID", data)).then(function (res, status) {


                consoleLog(res.replace(/['"]+/g, ''));
                var unit = res.replace(/['"]+/g, '');
                ddlUnitID.val(res.UnitIDd);
                ddlUnitID.val(unit);

            });


            $.when(getReqWithData('Html', "Get", "/AgroConfiguration/GetStockQty", data)).then(function (res, status) {

                debugger;
                consoleLog(res.replace(/['"]+/g, ''));
                $('#RawMaterialStockQty').text(res);
                //var rmn = res.replace(/['"]+/g, '');
                //ddlrmnqty.val(res.qty);
                //ddlrmnqty.val(rmn);

            });

        })


        //src
        searchByAny.keyup(function () {
            LoadDataTable()
        })

        //src2
        searchByAnyy.keyup(function () {
            LoadDataTableStock()
        })



        //load
        function LoadDataTable() {
            //debugger;

            var data = { flag: "View", name: $.trim(searchByAny.val()) };

            $.when(getReqWithData('html', 'GET', '/AgroConfiguration/GetMRawmaterialIssueList', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer").fadeOut('500', function () {
                        $("#dataContainer").empty();
                        $("#dataContainer").append(res).fadeIn('500');
                    });

                }
            }).fail(function (error) {
                console.log(error);
            });
            //pageNo = 1;
        }



        //loads
        function LoadDataTableStock() {
            debugger;

            var data = { flag: "Direct", name: $.trim(searchByAnyy.val()) };

            $.when(getReqWithData('html', 'GET', '/AgroConfiguration/GetMRawmaterialIssueList', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer3").fadeOut('500', function () {
                        $("#dataContainer3").empty();
                        $("#dataContainer3").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            });
            //pageNo = 1;
        }
         //loads

        //add
        $("#addTolist").click(function (e) {
            //alert();
            debugger;
            e.preventDefault();


            if (validateAddToList()) {

                if (ddlRawMaterialList.includes(ddlRawMaterial.val())) {
                    toastrErrorAlert("Material Already Exist");
                }
                else {
                    var sl = $("#tblPstockrawmaterial tbody tr").length;
                    var td1 = "<td class='text-center'><b>" + (sl + 1) + "</b></td>"
                    var td2 = "<td class='text-center'>" + dropDownSelectedText("ddlRawMaterial") + "</td>";
                    var td3 = "<td class='text-center'>" + ddlUnitName.val() + "</td>";
                    var td4 = "<td class='text-center QuanityIDCell'>" + ddlqty.val() + "</td>";
                    var td5 = "<td class='text-center'><a href='#' class='btn btn-sm btn-danger data-onfly-del'><i class='far fa-trash-alt'></i> Delete</a></td>";

                    var td6 = "<td class='text-center hide'>" + ddlRawMaterial.val() + "</td>";
                    var td7 = "<td class='text-center hide'>" + ddlUnitID.val() + "</td>";

                    var tr = "<tr>" + td1 + td2 + td3 + td4 + td5 + td6 + td7 + "</tr>";


                    $("#tblPstockrawmaterial tbody").append(tr);
                    ddlRawMaterialList.push(ddlRawMaterial.val());

                }
                clearCtrlStk();
            }

        })



        //remove
        $(document).on("click", "a.data-onfly-del", function (e) {
            debugger;
            e.preventDefault();
            var index = $(this).parent().parents('tbody tr').index();
            var tds = $(this).parent().parents('tbody tr').children('td');


            var rId = tds.eq(5).html();
            console.log("rId :" + rId);
            const mid = ddlRawMaterialList.indexOf(rId);

            ddlRawMaterialList.splice(mid, 1);

            if (bootbox.confirm("Are you sure you want to delete?", function (result) {
                if (result === true) {
                    removeTableRow("#tblPstockrawmaterial tbody", index);
                    fnFixTheTbodyRowSerial("#tblPstockrawmaterial tbody", index);

                };
            }));

        })

        //quantityCheck function
        function QuantityCheck() {
            debugger;
            var isValid = false;
            var originalQty = RawMaterialStockQty.text();
            var qty = originalQty.replace(/\(|\)/g, '');
            console.log(qty);
            if (TryParseInt(ddlqty.val()) > qty) {
                isValid = true
            }
            return isValid;
        }

        //validationadd
        function validateAddToList() {
            debugger;
            var isValid = true;
            $(".error").addClass('hide');

            if ($.trim(ddlRawMaterial.val()) == 0) {
                $(".req-ddlRawMaterial").removeClass('hide');
                isValid = false;
            }
            if (TryParseInt(ddlqty.val(), 0) <= 0) {
                $(".req-qty").removeClass('hide');
                isValid = false;
            }
            if (QuantityCheck() == true) {
                $(".req-qtyChecking").removeClass('hide');
                isValid = false;
            }

            return isValid;
        }


        //clear
        function clearCtrlStk() {
            //debugger;
            ddlRawMaterial.val("");
            ddlRawMaterial.trigger("change");
            ddlqty.val("");
            ddlUnitName.val("");
            ddlUnitID.val("");
            RawMaterialStockQty.text("");
        }


        //click
        //$("#custom-tabs-two-pstockrawmaterialqty-tab").click(function (e) {

        //    alert();
        //    debugger;
        //    e.preventDefault();
        //    LoadDataTableStock();
        //})

        //save
        $("#saveButton").click(function (e) {
            //alert();
            //debugger
            e.preventDefault();


            if (true === true) {

                bootbox.confirm("Are you sure you want to Save this", function (result) {
                    if (result) {
                        //alert("ok");
                       //debugger;
                        var totalsub = $('.totalsub').text();//initilize class total

                        //var info = { RawMaterialSupplierId: TryParseInt(ddlSupplierName.val(), 0), ChalanNo: ddlChallanNo.val(), InvoiceNo: ddlInvoiceNo.val(), InvoiceDate: ddlInvoiceDate.val(), TotalAmount: totalsub };
                        var details = [];
                        details.length = 0;

                        $.each($("#tblPstockrawmaterial tbody tr"), function (index, item) {
                            var tds = $(this).children('td');
                            details.push({
                                RawMaterialIssueStockDetailId: 0,
                                RawMaterialId: tds.eq(5).html(),
                                UnitID: tds.eq(6).html(),
                                Quantity: tds.eq(3).html(),
                            });
                        })


                        //console.log(info);
                        console.log(details);

                        //var data = JSON.stringify({ info: info, details: details });
                        var data = JSON.stringify({ details: details });
                        $.when(postReqWithToken(dataType.applicationJson, dataType.json, 'POST', '/AgroConfiguration/SaveRawmaterialPIssueStock', data, getToken())).then(function (res, status) {
                            @*if (res === true) {
                                //debugger;
                                $('.toastrDefaultSuccess').trigger('click');
                                setTimeout(function () {
                                    redirectPage('@Url.Action("GetMRawmaterialIssueList")');
                                }, 1000);
                                //resetUI();
                            }*@

                            if (res.IsSuccess === true) {
                                $('.toastrDefaultSuccess').trigger('click');
                                var RawMaterialName = res.File;
                                window.open('/AgroConfiguration/GetMRawMaterialReportSave?RawMaterialName=' + RawMaterialName, '_blank');
                                //window.open('/AgroConfiguration/AgroProductSalesReport?InvoiceNo=' + res.File, '_blank');
                                setTimeout(function () {
                                    redirectPage('@Url.Action("GetMRawmaterialIssueList")');
                                }, 500);
                               // printJS({ printable: res.File, type: 'pdf', base64: true });
                                
                                //resetUI();
                            }


                            else {
                                $('.toastrDefaultError').trigger('click');
                            }
                            enable("#btnSubmit");
                        }).fail(function (error) {
                            alert(execuStatus.fail);
                            enable("#btnSubmit");
                        })
                    }
                    //clearCtrlSv();
                })
            }


        })


        //details
        $(document).on('click', 'a.data-item-detail', function (e) {
            //alert();
            //debugger;

            e.preventDefault();
            $("#dataContainer2").empty();
            //$("#PurchaseDetails").modal('show');
            var id = $(this).parent().parents('tr').children('td').eq(1).html();
            if (TryParseInt(id, 0) > 0) {
                debugger;
                var data = { flag: "Detail",id: id };
                $.when(getReqWithData('html', 'GET', '/AgroConfiguration/GetMRawmaterialIssueList', data)).then(function (res, status) {
                    console.log(status);
                    if (status === "success") {
                        $("#dataContainer2").empty();
                        $("#dataContainer2").append(res);
                        $("#PurchaseDetails").modal('show');
                    }
                }).fail(function (error) {
                    console.log(error);
                })
            }
        })

        //reload
        function redirectPage(page) {
            window.location.replace(page);
        }
    </script>
}