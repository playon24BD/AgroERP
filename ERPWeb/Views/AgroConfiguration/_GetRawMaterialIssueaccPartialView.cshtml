

@model IEnumerable<ERPBO.Agriculture.ViewModels.MRawMaterialIssueStockInfoViewModel>

@{
    ViewBag.Title = "List of RawMaterialIssue";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblTerritoryData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Batch Code</th>
                    <th style="vertical-align:middle">EntryDate</th>
                    <th style="vertical-align:middle">EntryName</th>
                    <th style="vertical-align:middle">Status</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.RawMaterialIssueStockId</td>

                        <td class="text-center">@item.ProductBatchCode</td>
                        <td class="text-center">@item.EntryDate.Value.ToString("yyyy-MMM-dd")</td>
                        <td class="text-center">@item.UserName</td>
                        <td class="text-center">@item.Status</td>
                        <td class="text-center">
                            @*<a href="#" class="btn btn-warning btn-sm data-item-detail" style="line-height:1" data-item-detail="@item.PRawMaterialStockId"><i class="fa fa-pen"></i> Details</a>*@
                            <a href="#" class="btn btn-sm btn-outline-info data-item-detail" title="View Detail" data-item-detail="@item.RawMaterialIssueStockId" style="line-height:1">
                                <i class="fas fa-eye"></i>
                            </a>
                            @if (item.Status == "InActive")
                            {
                                <a href="#" class="btn btn-warning btn-sm data-edit-item-ACC" style="line-height:1" data-edit-item-ACC="@item.RawMaterialIssueStockId"><i class="fa fa-pen"></i>Approve</a>

                            }

                        </td>
                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>