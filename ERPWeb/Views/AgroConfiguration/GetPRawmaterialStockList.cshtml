                @*noneed*@


                <div class="tab-pane fade show " id="custom-tabs-two-pstockrawmaterial" role="tabpanel" aria-labelledby="custom-tabs-two-pstockrawmaterial-tab">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-navy">
                                <div class="card-header" style="text-align: center;">

                                    <div class="row">
                                        <div class="col-md-3">

                                        </div>
                                        <div class="col-md-6">
                                            <h5 class="text-center text-bold">
                                                Purchase And RawMaterial Stock
                                            </h5>
                                        </div>
                                        <div class="col-md-3">

                                        </div>

                                    </div>
                                </div>



                                @*addbodey*@
                                <div class="card-body" style="background-color:#e7f1f6">
                                    <div class="row">

                                        <div class="col-12" style="border-right:2px solid #efefef">
                                            <h5 style="border-bottom:2px solid #f6eaaa">Information</h5>
                                            <div class="card" style="background-color:#e7f1f6 ">
                                                <div class="row justify-content-center">
                                                    <div class="col-md-6">

                                                        <div class="row">
                                                            <div class="col-md-8">
                                                                <label for="ddlSupplierName" class="col-form-label">Supplier Name</label>
