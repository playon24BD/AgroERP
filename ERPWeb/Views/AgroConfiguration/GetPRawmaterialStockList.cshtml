                                </div>
                            </div>
                        </div>

                    </div>
                </div>


            </div>

        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">

      
        var ddlSupplierName = $("#ddlSupplierName");
        var ddlInvoiceDate = $("#ddlInvoiceDate");
        var ddlInvoiceNo = $("#ddlInvoiceNo");
        var ddlChallanNo = $("#ddlChallanNo");
        var ddlInvoiceDate = $("#ddlInvoiceDate");


        var ddlDepotName = $("#ddlDepotName");
        var ddlRawMaterial = $("#ddlRawMaterial");

        var ddlqty = $("#ddlqty");
        var ddlUnitName = $("#ddlUnitName");
        var ddluprice = $("#ddluprice");
        var ddlttprice = $("#ddlttprice");

        var ddlUnitID = $("#ddlUnitID");

        var ddlRawMaterialList = [];


        $(document).ready(function () {
            $('.select2').select2();

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });
            $("#btnSubmit").hide();
        })



        //change
        ddlRawMaterial.change(function () {
            //debugger;

            var data = { RawMaterialId: ddlRawMaterial.val() };

            $.when(getReqWithData('Html', "Get", "/AgroConfiguration/RawMaterialStockLoadUnitName", data)).then(function (res, status) {
               // debugger;

                consoleLog(res.replace(/['"]+/g, ''));
                var unit = res.replace(/['"]+/g, '');
                ddlUnitName.val(res.UnitName);
                ddlUnitName.val(unit);

            });
            $.when(getReqWithData('Html', "Get", "/AgroConfiguration/RawMaterialStockLoadUnitID", data)).then(function (res, status) {
              //  debugger;

                consoleLog(res.replace(/['"]+/g, ''));
                var unit = res.replace(/['"]+/g, '');
                ddlUnitID.val(res.UnitIDd);
                ddlUnitID.val(unit);

            });

        })



        $("#addTolist").click(function (e) {
            //alert();
            //debugger;
            e.preventDefault();
            if (validateAddToList()) {

            if (ddlRawMaterialList.includes(ddlRawMaterial.val())) {
                toastrErrorAlert("Material Already Exist");
            }
            else {
                var sl = $("#tblPstockrawmaterial tbody tr").length;
                var td1 = "<td class='text-center'><b>" + (sl + 1) + "</b></td>"
                var td2 = "<td class='text-center'>" + dropDownSelectedText("ddlRawMaterial") + "</td>";
                var td3 = "<td class='text-center'>" + ddlUnitName.val() + "</td>";
                var td4 = "<td class='text-center'>" + ddluprice.val() + "</td>";
                var td5 = "<td class='text-center'>" + ddlqty.val() + "</td>";
                var td6 = "<td class='text-center'>" + ddlttprice.val() + "</td>";
                var td7 = "<td class='text-center'><a href='#' class='btn btn-sm btn-danger data-onfly-del'><i class='far fa-trash-alt'></i> Delete</a></td>";

                var td8 = "<td class='text-center hide'>" + ddlRawMaterial.val() + "</td>";
                var td9 = "<td class='text-center hide'>" + ddlUnitID.val() + "</td>";

                var tr = "<tr>" + td1 + td2 + td3 + td4 + td5 + td6 + td7 + td8 + td9 + "</tr>";

                $("#tblPstockrawmaterial tbody").append(tr);
                ddlRawMaterialList.push(ddlRawMaterial.val());
            }
        }
            clearCtrlStk();
        })


        //save
        $("#saveButton").click(function (e) {
            //alert();
            debugger
            e.preventDefault();

            if (validatesave()) {

            if (true === true) {

                bootbox.confirm("Are you sure you want to Save this", function (result) {
                    if (result) {
                        //alert("ok");
                        debugger;
                        var info = { RawMaterialSupplierId: TryParseInt(ddlSupplierName.val(), 0), ChalanNo: ddlChallanNo.val(), InvoiceNo: ddlInvoiceNo.val(), InvoiceDate: ddlInvoiceDate.val() };
                        var details = [];
                        details.length = 0;

                        $.each($("#tblPstockrawmaterial tbody tr"), function (index, item) {
                            var tds = $(this).children('td');
                            details.push({
                                PRawMaterialStockDetailId: 0,
                                RawMaterialId: tds.eq(7).html(),
                                UnitID: tds.eq(8).html(),
                                UnitPrice: tds.eq(3).html(),
                                Quantity: tds.eq(4).html(),
                                SubTotal: tds.eq(5).html(),

                            });
                        })


                        console.log(info);
                        console.log(details);

                        var data = JSON.stringify({ info: info, details: details });
                        $.when(postReqWithToken(dataType.applicationJson, dataType.json, 'POST', '/AgroConfiguration/SaveRawmaterialPurchaseStock', data, getToken())).then(function (res, status) {
                            if (res === true) {
                                debugger;
                                $('.toastrDefaultSuccess').trigger('click');
                                setTimeout(function () {
                                    redirectPage('@Url.Action("GetPRawmaterialStockList")');
                                }, 1000);
                                //resetUI();
                            }
                            else {
                                $('.toastrDefaultError').trigger('click');
                            }
                            enable("#btnSubmit");
                        }).fail(function (error) {
                            alert(execuStatus.fail);
                            enable("#btnSubmit");
                        })
                    }
                })
            }
        }
        })






        //calculate
        ddlqty.keyup(function () {
            if (ddlqty.val()>=0) {
                calculateTotal();
            }
          

        });

        ddluprice.keyup(function () {
            if (ddluprice.val()>=0) {
                calculateTotal();

            } 

        });

        function calculateTotal() {

            var sub = ddluprice.val() * ddlqty.val();
            ddlttprice.val(sub);

        }
        //calculateend

        //remove
        $(document).on("click", "a.data-onfly-del", function (e) {
            debugger;
            e.preventDefault();
            var index = $(this).parent().parents('tbody tr').index();
            var tds = $(this).parent().parents('tbody tr').children('td');

            var rId = tds.eq(7).html();
            console.log("rId :" + rId);
            const mid = ddlRawMaterialList.indexOf(rId);
            ddlRawMaterialList.splice(mid, 1);

            if (bootbox.confirm("Are you sure you want to delete?", function (result) {
                if (result === true) {



                    removeTableRow("#tblPstockrawmaterial tbody", index);
                    fnFixTheTbodyRowSerial("#tblPstockrawmaterial tbody", index);
                };
            }));

        })



        //clear
        function clearCtrlStk() {
            //debugger;
            ddlRawMaterial.val("");
            ddlqty.val("");
            ddlUnitName.val("");
            ddlUnitID.val("");
            ddlttprice.val("");
            ddluprice.val("");
        }


        //validationadd
        function validateAddToList() {
            //debugger;
            var isValid = true;
            $(".error").addClass('hide');

            if ($.trim(ddlRawMaterial.val()) == 0) {
                $(".req-ddlRawMaterial").removeClass('hide');
                isValid = false;
            }
            if (TryParseInt(ddlqty.val(), 0) <= 0) {
                $(".req-qty").removeClass('hide');
                isValid = false;
            }
            if (ddluprice.val() === "") {
                $(".req-uprice").removeClass('hide');
                isValid = false;
            }

            return isValid;
        }


        //validationsave
        function validatesave() {
            debugger;
            var isValid = true;
            $(".error").addClass('hide');

            if ($.trim(ddlRawMaterial.val()) == 0) {
                $(".req-SupplierName").removeClass('hide');
                isValid = false;
            }
            if (TryParseInt(ddlqty.val(), 0) <= 0) {
                $(".req-ddlInvoiceDate").removeClass('hide');
                isValid = false;
            }
            if (ddlChallanNo.val() === "") {
                $(".req-ddlChallanNo").removeClass('hide');
                isValid = false;
            }
            if (ddlInvoiceNo.val() === "") {
                $(".req-ddlInvoiceNo").removeClass('hide');
                isValid = false;
            }

            return isValid;
        }


        function redirectPage(page) {
            window.location.replace(page);
        }


    </script>
}