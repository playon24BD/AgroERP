@model IEnumerable<ERPBO.Agriculture.ViewModels.FinishGoodProductionInfoViewModel>
@{ 
    int sl = 0;
}
<div class="col-md-12">
    <table class="table table-responsive-lg table-striped text-sm">
        <thead class="btn-dark">
            <tr>
                <th>Sl</th>
                <th>Product Name </th>
                <th>BatchCode</th>
                <th>Finish Quantity</th>
                <th>UnitQty</th>
                <th>Action </th>

            </tr>

        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {


            foreach (var item in Model)
            {
                    sl++;
            <tr>
                <td>@sl</td>
                <td>@item.FinishGoodProductName</td>
                <td>@item.FinishGoodProductionBatch</td>
                <td>@item.TargetQuantity</td>
                <td>@item.Quanity@item.UnitName</td>

                <td><a href="#" class="btn btn-secondary btn-sm data-item-detail" data-item-detail="@item.FinishGoodProductionBatch"><i class="fas fa-eye"></i>View</a></td>

            </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Data Not Found</td>
                </tr>
            }

        </tbody>

    </table>

</div>
