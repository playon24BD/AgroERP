@model IEnumerable<ERPBO.Agriculture.ViewModels.FinishGoodProductionInfoViewModel>

@{
    ViewBag.Title = "List of FG Product Pending List";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblDepotData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">PO Number</th>
                    <th style="vertical-align:middle">Product Name</th>
                    <th style="vertical-align:middle" class="hide">BatchCode</th>
                    <th style="vertical-align:middle">Product Details</th>
                    <th style="vertical-align:middle">Quantity</th>
                    <th style="vertical-align:middle">Date</th>
                    <th style="vertical-align:middle">Status</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.FinishGoodProductInfoId</td>
                        <td class="text-center">@item.FinishGoodProductionBatch</td>
                        <td class="text-center">@item.FinishGoodProductName</td>
                        <td class="hide">@item.ReceipeBatchCode</td>
                        <td class="text-center">@item.FGRQty@(" ("+@item.UnitName+" )")</td>
                        <td class="text-center">@item.TargetQuantity</td>
                        <td class="text-center">@item.EntryDate</td>
                        <td class="text-center">@item.Status</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-warning btn-sm data-edit-item-Return" style="line-height:1" data-edit-item-Return="@item.FinishGoodProductionBatch"><i class="fa fa-pen"></i> Approve</a>
                        </td>
                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>