@model IEnumerable<ERPBO.Agriculture.ViewModels.RawMaterialIssueStockInfoViewModel>

@{
    ViewBag.Title = "_GetRawMaterialIssueStockList";
    var sl = 0;
    var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;
}
<table class="table table-bordered table-sm table-striped table-responsive-lg text-sm" id="tblRawMaterialIssueStockList">
    <thead class="btn-dark">
        <tr class="text-center text-bold">
            <th style="vertical-align:middle">#SL</th>
            <th style="vertical-align:middle" class="hide"></th>
            <th style="vertical-align:middle">Raw Material Name</th>
            <th style="vertical-align:middle">Quantity</th>
            <th style="vertical-align:middle">UnitName</th>
            <th style="vertical-align:middle">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center text-bold">@sl</td>
                <td class="hide">@item.RawMaterialIssueStockId</td>
                <td class="text-center">@item.RawMaterialName</td>
                <td class="text-center">@item.Quantity</td>
                <td class="text-center">@item.UnitName</td>

                <td class="text-center">

                    <a href="#" class="btn btn-outline-secondary data-item-detail" title="View Detail" data-item-detail="@item.RawMaterialIssueStockId" style="line-height:1">
                        <i class="fas fa-eye"></i>
                    </a>

                    <a href="#" class="btn btn-outline-warning data-item-edit hide" title="Edit" data-edit-item="@item.RawMaterialIssueStockId" style="line-height:1">
                        <i class="fas fa-pen"></i>
                    </a>

                    @*<a href="#" class="btn btn-outline-danger data-item-del" title="Delete" data-del-item="@item.RawMaterialIssueStockId" style="line-height:1">
                        <i class="fas fa-trash"></i>
                    </a>*@


                </td>
            </tr>
        }

    </tbody>
</table>
