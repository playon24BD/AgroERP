@section scripts{

    <script type="text/javascript">

        var SearchAny = $("#SearchAny");
        var ddlStockiestName = $("#ddlStockiestName");
        var dptFromDate = $("#dptFromDate");
        var dptToDate = $("#dptToDate");
        var ddlmoneyreciptid = $("#ddlmoneyreciptid");
        var ddlAction = $("#ddlAction");


        $(document).ready(function () {

            $('.select2').select2();

            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });
            dptFromDate.prop('readonly', true);
            dptToDate.prop('readonly', true);
            dptFromDate.css("background-color", "#fff");
            dptToDate.css("background-color", "#fff");
            $('#dptFromDate').datepicker({
                format: "dd MM yyyy",
                orientation: "bottom auto",
                todayHighlight: true,
                autoclose: true
            });
            $('#dptToDate').datepicker({
                format: "dd MM yyyy",
                orientation: "bottom auto",
                todayHighlight: true,
                autoclose: true
            });


            LoadMoneyReceiptList()

        })


        $(document).on('click', 'div.remove-date', function () {
            if ($(this).hasClass("dptToDate")) {
                if (dptToDate.val() !== '') {
                    dptToDate.val('');
                    LoadMoneyReceiptList();
                }
            }
            if ($(this).hasClass("dptFromDate")) {
                if (dptFromDate.val() !== '') {
                    dptFromDate.val('');
                    LoadMoneyReceiptList();
                }
            }

        })

        SearchAny.keyup(function () {
            LoadMoneyReceiptList()
        })

        ddlStockiestName.change(function () {

            LoadMoneyReceiptList();

        });
        dptFromDate.change(function () {
            LoadMoneyReceiptList();

        });

        dptToDate.change(function () {
            LoadMoneyReceiptList();

        });


        function LoadMoneyReceiptList() {
            debugger;

            var data = { flag: "View", moneyReceiptNo: $.trim(SearchAny.val()), stockiestId: TryParseInt(ddlStockiestName.val(), 0), fromDate: dptFromDate.val(), toDate: dptToDate.val() };

            $.when(getReqWithData('html', 'GET', '/AgroConfiguration/MoneyReceiptListApprove', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer").fadeOut('500', function () {
                        $("#dataContainer").empty();
                        $("#dataContainer").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            });

        }

        $(document).on('click', 'a.data-item-detail', function (e) {
            e.preventDefault();
            debugger;
            //$("#dataContainer2").empty();

            var id = $(this).parent().parents('tr').children('td').eq(1).html();



            var data = { flag: "Detail", id: id };
            $.when(getReqWithData('html', 'GET', '/AgroConfiguration/MoneyReceiptList', data)).then(function (res, status) {
                debugger;
                console.log(status);
                if (status === "success") {
                    debugger;
                    $("#dataContainer2").empty();
                    $("#dataContainer2").append(res);
                    $("#MoneyReceiptListDetails").modal('show');

                }
            }).fail(function (error) {
                console.log(error);
            })

        })



        $(document).on('click', 'a.data-edit-item-Return', function (e) {
            e.preventDefault();
            debugger;
            var row = $(this).parent().parents('tr');
            var td1 = row.find('td:eq(1)').html();//moneyreciptid
            var td2 = row.find('td:eq(2)').html();//stokieestname
            var td3 = row.find('td:eq(3)').html();//memono
            var td6 = row.find('td:eq(6)').html();//TotalAmount
            var td7 = row.find('td:eq(7)').html();//Date
            ddlmoneyreciptid.val(td1);

            $("#dataContainer2").empty();
            var id = $(this).parent().parents('tr').children('td').eq(1).html();
            if (true) {
                var data = { flag: "Detail", id: id };
                $.when(getReqWithData('html', 'GET', '/AgroConfiguration/MoneyReceiptListApprove', data)).then(function (res, status) {
                    console.log(status);
                    if (status === "success") {
                        $("#dataContainer2").empty();
                        $("#dataContainer2").append(res);
                        $("#ModalProductionFinishGoodDetails").modal('show');
                    }
                }).fail(function (error) {
                    console.log(error);
                })
            }
        })



        //apprrove
                $("#Accept").click(function (e) {
            debugger
            e.preventDefault();
            if (true) {

                debugger;
                var info = { PaymentMoneyReciptId: ddlmoneyreciptid.val(), Status: ddlAction.val() };
                        var details = [];
                        details.length = 0;

                $.each($("#tttt tbody tr"), function (index, item) {
                            var tds = $(this).children('td');
                            details.push({

                                PaymentRegisterID: tds.eq(5).html(),
                                ProductSalesInfoId: tds.eq(6).html(),
                                PaymentAmount: tds.eq(2).html()


                            });
                        })


                console.log(details);
                var data = JSON.stringify({ details: details, info: info });

                $.when(postReqWithToken(dataType.applicationJson, dataType.json, 'POST', '/AgroConfiguration/SaveProSalesPaymentApprove', data , getToken())).then(function (res, status)
                {

                            if (res === true) {
                                $('.toastrDefaultSuccess').trigger('click');
                                setTimeout(function () {
                                    redirectPage('@Url.Action("MoneyReceiptListApprove")');
                                }, 1000);

                            }
                            else {
                                $('.toastrDefaultError').trigger('click');
                            }
                            enable("#btnSubmit");
                        }).fail(function (error) {
                            alert(execuStatus.fail);
                            enable("#btnSubmit");
                        })

            }
        })


        function redirectPage(page) {
            window.location.replace(page);
        }
    </script>
}


