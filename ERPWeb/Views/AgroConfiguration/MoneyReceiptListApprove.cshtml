
@{
    ViewBag.Title = "Payment Approve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:-12px">
    <div class="col-md-12 p-0">

        <div class="row" style="margin-top:-12px">
            <div class="col-md-12">
                <div class="card" style="background-color:#001f3f">
                    <div class="px-2 py-1">
                        <div class="row align-items-center">

                            <div class="col-md-2">
                                <h7 class="float-left text-bold text-white">Pending Payment</h7>
                            </div>

                            <div class="col-md-2">

                                <input type="text" class="form-control form-control-sm" id="SearchAny" placeholder="search By any" />
                            </div>
                            <div class="col-md-2">

                                @Html.DropDownList("ddlStockiestName", (IEnumerable<SelectListItem>)ViewBag.ddlStockiestName, "--Select Stockiest--", new { @class = "form-control form-control-sm ctrl-changed select2 select2-danger" })
                            </div>

                            <div class="col-md-2">

                                <div class="input-group input-group-sm ">
                                    <input type="text" class="form-control form-control-sm date-datePicker ctrl-changed" id="dptFromDate" placeholder="From Date" />

                                </div>
                            </div>
                            <div class="col-md-2">

                                <div class="input-group input-group-sm ">
                                    <input type="text" class="form-control form-control-sm date-datePicker ctrl-changed" id="dptToDate" placeholder="To Date" />

                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>

        <div class="row" style="margin-top:-3px">


            <div class="col-md-12" style="margin-top:-13px">

                <div class="col-md-12 p-0" id="dataContainer">

                </div>

            </div>

        </div>


    </div>

</div>


<div class="modal fade" id="ModalProductionFinishGoodDetails" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-gradient-gray-dark">

                <div class="col-md-4">
                    <h5 class="text-left text-bold">
                       Payment Details
                    </h5>
                </div>
                <div class="hide">
                    <label for="ddlmoneyreciptid" class="control-label">Moneyreciptid</label>
                    <input type="text" id="ddlmoneyreciptid" class="form-control form-control-sm" />
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <select class="form-control form-control-sm" id="ddlAction">
                            <option value="Approved" selected>Approved</option>
                            <option value="Rejected">Rejected</option>

                        </select>
                    </div>
                </div>

            </div>


            <div class="modal-body" id="dataContainer2">

            </div>
            <div class="modal-footer btn-default">
                <div class="col-md-6">
                    <div id="msg1" class="alert alert-success hide float-left">
                        Data has been saved Successful!
                    </div>
                    <div id="msg2" class="alert alert-danger hide float-left">
                        Data has been failed to save!
                    </div>
                </div>
                <button type="button" class="btn btn-outline-danger btn-sm float-right" data-dismiss="modal" data-target="#"><i class="fa-solid fa-circle-xmark"></i></i>Cancel</button>
                <button type="submit" class="btn btn-outline-success btn-sm float-right" id="Accept"><i class="fas fa-paper-plane"></i> <span id="spanSaveTextZone">Save</span> </button>
            </div>
        </div>
    </div>
</div>




