@model IEnumerable<ERPBO.Agriculture.ViewModels.FinishGoodProductionInfoViewModel>
@{
    int sl = 0;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-hover">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>Sl</th>
                    <th>Product Name </th>
                    <th>Measurment</th>
                    <th class="hide">Product Details</th>
                    @*<th>Recipe Unit</th>*@
                    <th>Production Total</th>
                    <th>Sales Total</th>
                    <th>Return Total </th>
                    <th>Current Pices </th>

                    @*<th>Action</th>*@

                </tr>

            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {


                    foreach (var item in Model)
                    {
                        sl++;
                        <tr class="text-center">
                            <td>@sl</td>
                            <td>@item.FinishGoodProductName</td>
                            <td>@item.MeasurementName</td>
                            <td class="hide">@item.FGRQty@(" (" + @item.UnitName + " )")</td>
                            @*<td>@item.UnitName</td>*@
                            <td>@item.ProductionTotal</td>
                            <td>@item.SalesTotal</td>
                            <td>@item.ReturnTotal</td>
                            <td>@item.CurrentStock</td>

                            @*<td><a href="#" class="btn btn-secondary btn-sm data-item-detail" data-item-detail="@item.FinishGoodProductionBatch"><i class="fas fa-eye"></i>View</a></td>*@

                        </tr>

                    }
                }
                else
                {
                    <tr>
                        <td colspan="12" class="text-center">Data Not Found</td>
                    </tr>
                }

            </tbody>

        </table>

    </div>
</div>
