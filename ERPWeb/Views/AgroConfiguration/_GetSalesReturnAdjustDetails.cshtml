@model IEnumerable<ERPBO.Agriculture.ViewModels.SalesReturnViewModel>

@{
    string badge = string.Empty;
    int sl = 0;
}
<div class="col-md-12">
    <table class="table table-bordered table-striped table-hover table-sm text-sm">
        <thead>
            <tr class="text-sm btn-dark">
                <th class="text-center" style="vertical-align:middle">#SL</th>

                <th class="text-center" style="vertical-align:middle">Product Name</th>
                <th class="text-center" style="vertical-align:middle">Measurment</th>
                <th class="hide" style="vertical-align:middle">R.QTY</th>
                <th class="text-center" style="vertical-align:middle">R.T.Quanity</th>
                <th class="text-center" style="vertical-align:middle">R.PerUnitPrice</th>
                <th class="text-center" style="vertical-align:middle">R.TotalPrice</th>
                <th class="text-center" style="vertical-align:middle">R.date</th>
                <th class="text-center" style="vertical-align:middle">AdjustmentDate</th>
                <th class="text-center" style="vertical-align:middle">Status</th>

            </tr>

        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    badge = item.Status == "NOTADJUST" ? "badge bg-danger" : item.Status == "ADJUST" ? "badge bg-success" : "";
                    sl++;
                    <tr>
                        <td>@sl</td>
                        <td class="text-center">@item.FinishGoodProductName</td>
                        <td class="text-center">@item.MeasurementSize</td>
                        <td class="hide">@item.BoxQuanity</td>
                        <td class="text-center">@item.ReturnQuanity</td>
                        <td class="text-center">@item.ReturnPerUnitPrice</td>
                        <td class="text-center">@item.ReturnTotalPrice</td>
                        <td class="text-center">@item.ReturnDate.Value.ToString("yyyy-MMM-dd")</td>
                        @if (item.AdjustmentDate == null)
                        {
                            <td class="text-center">No Date</td>
                        }
                        else
                        {
                            <td class="text-center">@item.AdjustmentDate.Value.ToString("yyyy-MMM-dd")</td>
                        }


        
                        <td class="text-center" data-val="@item.Status">
                            <span class="@badge">@item.Status</span>
                        </td>

                    </tr>

                }


            }
            else
            {
                <tr>
                    <td colspan="12"></td>
                    No Data Found
                </tr>

            }


        </tbody>

    </table>

</div>





