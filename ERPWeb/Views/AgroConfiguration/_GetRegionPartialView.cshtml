@model IEnumerable<ERPBO.Agriculture.ViewModels.RegionSetupViewModel>

@{
    ViewBag.Title = "List of Region";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblDepotData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Organization Name</th>
                    <th style="vertical-align:middle">Region Name</th>
                    <th style="vertical-align:middle">Devision Name</th>
                    <th style="vertical-align:middle">Status</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                <tr>

                    <td class="text-center text-bold">@SL</td>
                    <td class="hide">@item.RegionId</td>
                    <td class="hide">@item.DivisionId</td>
                    <td class="hide">@item.OrganizationId</td>
                    <td class="text-center">@item.OrganizationName</td>
                    <td class="text-center">@item.RegionName</td>
                    <td class="text-center">@item.DivisionName</td>
                    <td class="text-center">@item.Status</td>
                    <td class="text-center">
                        <a href="#" class="btn btn-warning btn-sm data-edit-item-Zone" style="line-height:1" data-edit-item-Zone="@item.RegionId"><i class="fa fa-pen"></i> Edit</a>
                    </td>
                </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>