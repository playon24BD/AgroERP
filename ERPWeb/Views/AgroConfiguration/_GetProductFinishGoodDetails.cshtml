@model IEnumerable<ERPBO.Agriculture.ViewModels.FinishGoodProductionDetailViewModel>
@{ 
        int sl = 0;
}
<div class="col-md-12">
    <table class="table  table-responsive-lg table-striped table-bordered text-sm">
        <thead class="btn-dark">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th style="vertical-align:middle">Material Name</th>
                <th style="vertical-align:middle">Quantity</th>
                <th style="vertical-align:middle">Status</th>
                <th style="vertical-align:middle">Entry Date</th>
        
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    sl++;
                    <tr>
                        <td class="text-center">@sl</td>
                        <td class="text-center">@item.RawMaterialName</td>
                        <td class="text-center">@item.RequiredQuantity</td>
                        <td class="text-center">@item.Status</td>
                        <td class="text-center">@item.EntryDate</td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="3"></td>
                </tr>
            }

        </tbody>

    </table>

</div>