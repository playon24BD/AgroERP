@model IEnumerable<ERPBO.Agriculture.ViewModels.FinishGoodProductionDetailViewModel>
@{ 
    ViewBag.Title = "_GetFinishGoodRecipeDetail";
    int sl = 0;
    var info = (ERPBO.Agriculture.ViewModels.FinishGoodProductionInfoViewModel)ViewBag.Info;
}
<div class="col-md-12">
    <table class="table table-bordered table-striped table-sm table-responsive-lg text-sm">
        @if (info != null)
        {
            <tr>
                <td style="width:13%">Batch</td>
                <td style="width:15%"><b>@info.FinishGoodProductionBatch</b></td>

            </tr>
        }
    </table>
    <table class="table  table-responsive-lg table-striped table-bordered text-sm" id="tblfgproductpendingItems">
        <thead class="btn-dark">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th style="vertical-align:middle">Material Name</th>
                <th style="vertical-align:middle">Quantity</th>
                <th style="vertical-align:middle">Status</th>
                <th style="vertical-align:middle">Entry Date</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    sl++;
                    <tr>
                        <td class="hide">@item.FinishGoodProductionBatch</td>
                        <td class="hide">@item.FinishGoodProductionDetailId</td>
                        <td class="text-center">@sl</td>

                        <td class="text-center">@item.RawMaterialName</td>
                        <td class="text-center">@item.RequiredQuantity</td>
                        <td class="text-center">@item.Status</td>
                        <td class="text-center">@item.EntryDate</td>
                        <td class="hide">@item.RawMaterialId</td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="3"></td>
                </tr>
            }

        </tbody>

    </table>

</div>