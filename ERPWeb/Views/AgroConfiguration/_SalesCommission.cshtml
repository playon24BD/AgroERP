@model IEnumerable<ERPBO.Agriculture.ViewModels.CommissionOnProductOnSalesViewModel>

@{
    string badge = string.Empty;
    int sl = 0;
}

<div class="col-md-12">
    <table class="table table-bordered table-striped table-hover table-sm text-sm">
        <thead class="btn-dark">
            <tr class="text-center">
                <td style="vertical-align:middle">#Sl</td>
                <td style="vertical-align:middle">Invoice No</td>
                <td style="vertical-align:middle">Stockiest Name</td>
                <td style="vertical-align:middle">Payment Method</td>
                <td style="vertical-align:middle">Total Amount</td>
                <td style="vertical-align:middle">Total Commission</td>
                <td style="vertical-align:middle">Entry Date</td>
                <td style="vertical-align:middle">Action</td>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    badge = item.PaymentMode == "Credit" ? "badge bg-warning" : (item.PaymentMode == "Cash" ? "badge bg-success" : "" );

                    sl++;
            <tr>
                <td class="text-center">@sl</td>

                <td class="text-center">@item.InvoiceNo</td>
                <td class="text-center">@item.StockiestName</td>
                <td class="text-center ">
                    <span class="@badge">@item.PaymentMode</span>
                </td>
                <td class="text-center">@item.TotalAmount</td>
                <td class="text-center">@item.TotalCommission</td>
                <td class="text-center">@item.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
                @*<td class="text-center hide">@item.CommissionOnProductOnSalesId</td>*@

                <td class="text-center">
                    <a href="#" class="btn btn-outline-warning data-item-detail" title="view" data-item-detail="@item.CommissionOnProductOnSalesId" style="line-height:1">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
            </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No Data found</td>
                </tr>

            }




        </tbody>

    </table>

</div>
