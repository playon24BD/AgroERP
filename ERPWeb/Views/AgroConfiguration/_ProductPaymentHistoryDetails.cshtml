@model IEnumerable<ERPBO.Agriculture.ViewModels.ProductPricingHistoryViewModel>

@{

    int sl = 0;
}
<div class="col-md-12">
    <table class="table table-bordered table-striped table-hover table-sm text-sm">
        <thead>
            <tr class="text-sm btn-dark">
                @*<th class="text-center" style="vertical-align:middle">#SL</th>*@
                <th class="text-center" style="vertical-align:middle">Date</th>
                <th class="text-center" style="vertical-align:middle">Price</th>
                <th class="text-center" style="vertical-align:middle">User</th>





            </tr>

        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    sl++;
                    <tr>
                        @*<td>@sl</td>*@
                        <td class="text-center">@item.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
                        <td class="text-center">@item.ProductPrice.ToString("0.00")</td>
                        @*<td class="text-center">@item.StockDate.Value.ToString("dd.MMM.yyyy")</td>*@
                        <td class="text-center">@item.UserName</td>
                    </tr>

                }


            }
            else
            {
                <tr>
                    <td colspan="12"></td>
                    No Data Found
                </tr>

            }


        </tbody>

    </table>

</div>