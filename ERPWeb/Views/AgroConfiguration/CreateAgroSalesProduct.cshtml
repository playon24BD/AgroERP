                            </div>
                            <div class="col-md-4">
                                <label for="ddlRawMaterial" class="col-form-label">Measurement Size</label>
                                @*@Html.DropDownList("ddlMeasurementSize", (IEnumerable<SelectListItem>)ViewBag.ddlMeasurementSize, "--Select Measurement Size--", new { @class = "form-control form-control-sm ctrl-changed select2 select2-danger" })*@
