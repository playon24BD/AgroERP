                                <label class="col-form-label font-weight-bold">Invoice Date</label>
                                <div class="input-group input-group-sm ">
                                    <input type="text" class="form-control form-control-sm date-datePicker-InvoiceDate ctrl-changed" id="InvoiceDate" />
                                    <div class="input-group-prepend cursor-pointer remove-date InvoiceDate" style="cursor:pointer">
                                        <span class="input-group-text">&#10008;</span>
                                    </div>
                                </div>
                            </div>

