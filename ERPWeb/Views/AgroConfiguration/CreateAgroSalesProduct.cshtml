                                <select class="form-control form-control-sm" id="ddlPaymentMode">
                                    <option value="Credit">Credit</option>
                                    <option value="Cash">Cash</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="col-form-label" for="model">Vehicle Type</label>
                                <input type="text" id="txtVehicleType" class="form-control form-control-sm">
                            </div>
