
@{
    ViewBag.Title = "CreateAgroSalesProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-sm" style="margin-top:-15px">
    <div class="col-md-12">
        <div class="card card-gray shadow">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/AgroConfiguration/GetFinishGoodRecipeList" class="float-left btn btn-sm btn-outline-primary" title="Go To List">
                            <i class="fas fa-arrow-alt-circle-left"></i>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-center text-bold">Challan & Invoice Posting</h5>
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5" style="border-right:2px solid #efefef">
                        <h5 style="border-bottom:2px solid #f6eaaa">
                            Challan & Invoice Product
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="ddlClient" class="col-form-label">
                                    Client Name
                                </label>
                                @Html.DropDownList("ddlClientName", (IEnumerable<SelectListItem>)ViewBag.ddlClientName, "--Select ClientName--", new { @class = "form-control form-control-sm ctrl-changed select2 select2-danger" })
                                <span class="error hide req-ClientName font-weight-bold">Client Name is required!</span>
                            </div>
                            <div class="col-md-6">
                                <label for="ddlDepotName" class="col-form-label">Depot</label>
                                <input type="text" id="ddlDepotName" class="form-control form-control-sm" />
                            </div>
                            @*<div class="col-md-6">
                                    <label for="ddlChallanNo" class="col-form-label">Challan No.</label>
                                    <input type="text" id="ddlChallanNo" class="form-control form-control-sm" />
                                </div>*@

