                isValid = false;
            }
            if (txtQuanity.val() === "") {
                $(".req-req-Quanity").removeClass('hide');
                isValid = false;
            }
            if (QuantityCheck() == true) {
                $(".req-qtyChecking").removeClass('hide');
                isValid = false;
            }




            return isValid;
        }

        function QuantityCheck() {
            var isValid = false;
