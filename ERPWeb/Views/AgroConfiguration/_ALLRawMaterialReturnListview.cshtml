@model IEnumerable<ERPBO.Agriculture.ViewModels.ReturnRawMaterialViewModel>

@{
    ViewBag.Title = "List of RawMaterial Return";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblretunrData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">RawMaterial Name</th>
                    <th style="vertical-align:middle">UnitName</th>
                    <th style="vertical-align:middle">Quantity</th>
                    <th style="vertical-align:middle">ReturnType</th>
                    @*<th style="vertical-align:middle">Return Date</th>*@
                    <th style="vertical-align:middle">Status</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.RawMaterialId</td>
                        <td class="hide">@item.UnitId</td>
                        <td class="text-center">@item.RawMaterialName</td>
                        <td class="text-center">@item.UnitName</td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-center">@item.ReturnType</td>
                        @*<td class="text-center">@item.EntryDate</td>*@
                        <td class="text-center">@item.Status</td>



                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>