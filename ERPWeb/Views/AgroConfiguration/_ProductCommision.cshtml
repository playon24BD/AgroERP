@model IEnumerable<ERPBO.Agriculture.ViewModels.CommisionOnProductViewModel>

@{

    int sl = 0;
}

<div class="col-md-12">
    <table class="table table-responsive-lg table-bordered table-hover text-sm">
        <thead class="btn-dark">
            <tr>
                <td style="vertical-align:middle">#Sl</td>
                <td style="vertical-align:middle">Year</td>
                <td style="vertical-align:middle">Product Name</td>
                <td style="vertical-align:middle">Credit(%)</td>
                <td style="vertical-align:middle">Cash(%)</td>
                <td style="vertical-align:middle">Status</td>
                <td style="vertical-align:middle">
                    From Date
                </td>
                <td style="vertical-align:middle">To Date</td>
                <td style="vertical-align:middle">Remarks</td>
                <td style="vertical-align:middle">Entry Date</td>
                <td style="vertical-align:middle">Validate</td>
                <td style="vertical-align:middle">Action</td>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    sl++;
            <tr>
                <td class="text-center">@sl</td>

                <td class="text-center">@item.CalenderYear</td>
                <td class="text-center">@item.FinishGoodProductName</td>
                <td class="text-center hide">@item.FinishGoodProductId</td>
                <td class="text-center">@item.Credit</td>
                <td class="text-center">@item.Cash</td>
                <td class="text-center">@item.Status</td>
                <td class="text-center">@item.StartDate.Value.ToString("dd-MMM-yyyy")</td>
                <td class="text-center">@item.EndDate.Value.ToString("dd-MMM-yyyy")</td>
                <td class="text-center">@item.Remarks</td>
                <td class="text-center">@item.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
                <td class="text-center hide">@item.CommissionOnProductId</td>
                <td class="text-center" style="color:red">@item.Quantity Days</td>
                <td>
                    <a href="#" class="btn btn-outline-warning data-item-edit" title="Edit" data-item-edit="@item.CommissionOnProductId" style="line-height:1">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
            </tr>
                }

            }
            else
            {
                 <tr>
                    <td colspan="8" class="text-center">No Data found</td>
                </tr>

            }


     

        </tbody>

    </table>

</div>