@model IEnumerable<ERPBO.Agriculture.ViewModels.SalesReturnViewModel>

@{
    string badge = string.Empty;
    ViewBag.Title = "List of SalesReturn";
    var SL = 0;
}
<style>


    table.tadd tr th {
        background-color: black !important;
        
        color: white !important;
    }
    table.tablesubtotal tr th {
        background-color: white !important;
        color: white !important;
    }



</style>


<div class="row">
    <div class="table-responsive p-0 " style="height: 400px;">
        <table class="table table-head-fixed table-sm text-sm text-nowrap tadd" id="tblList">
            <thead>
                <tr class="text-center" style="color:black">

                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Return Code</th>
                    <th style="vertical-align:middle">Stokiest Name</th>
                    <th style="vertical-align:middle">Invoice No</th>
                    <th style="vertical-align:middle">Invoice Bill</th>
                    <th style="vertical-align:middle">Product Name</th>
                    <th style="vertical-align:middle">Recipe Unit Qty</th>
                    <th style="vertical-align:middle">Quantity</th>
                    <th style="vertical-align:middle">Unit Price</th>
                    <th style="vertical-align:middle">Return Date</th>
                    <th style="vertical-align:middle">Status</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    badge = item.Status == "NOTADJUST" ? "badge bg-danger" : item.Status == "ADJUST" ? "badge bg-success" : "";

                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.FinishGoodProductInfoId</td>
                        <td class="hide">@item.ProductSalesInfoId</td>
                        <td class="text-center">@item.ReturnCode</td>

                        <td class="text-center">@item.StockiestName</td>
                        <td class="text-center">@item.InvoiceNo</td>
                        <td class="text-center">@item.TotalAmount.ToString("N2")</td>
 
                        <td class="text-center">@item.FinishGoodProductName</td>
                        <td class="text-center">@item.QtyKG</td>
                        <td class="text-center">@item.ReturnQuanity</td>
                        <td class="text-center">@item.ReturnPerUnitPrice.ToString("N2")</td>
                        <td class="text-center">@item.ReturnDate.Value.ToString("dd-MMM-yyyy")</td>
                        
                        <td class="text-center" data-val="@item.Status">
                            <span class="@badge">@item.Status</span>
                        </td>



                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="12">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>


