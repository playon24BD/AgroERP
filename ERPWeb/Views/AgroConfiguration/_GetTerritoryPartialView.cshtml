@model IEnumerable<ERPBO.Agriculture.ViewModels.TerritorySetupViewModel>

@{
    ViewBag.Title = "List of Territory";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblTerritoryData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">TerritoryName</th>
                    <th style="vertical-align:middle">Area Name</th>
                    <th style="vertical-align:middle">Status</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.TerritoryId</td>
                        <td class="hide">@item.AreaId</td>
                        @*<td class="hide">@item.OrganizationId</td>*@
                        <td class="text-center">@item.TerritoryName</td>
                        <td class="text-center">@item.AreaName</td>
                        <td class="text-center">@item.Status</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-warning btn-sm data-edit-item-Territory" style="line-height:1" data-edit-item-Territory="@item.TerritoryId"><i class="fa fa-pen"></i> Edit</a>
                        </td>
                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
