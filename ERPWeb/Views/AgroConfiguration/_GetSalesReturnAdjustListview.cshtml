@model IEnumerable<ERPBO.Agriculture.ViewModels.AgroProductSalesInfoViewModel>

@{
    ViewBag.Title = "List of SalesReturnAdjustList";
    var SL = 0;
    //var info = (ERPBO.Agriculture.DomainModels.SalesReturn)
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblSalesReturnAdjust">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Invoice No</th>
                    <th style="vertical-align:middle">Invoice Date</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">StockiestName</th>
                    <th style="vertical-align:middle">Total Bill</th>
                    <th style="vertical-align:middle">Total Paid</th>
                    <th style="vertical-align:middle">Total Due</th>
                    <th style="vertical-align:middle">AdjustTotalReturn</th>
                    <th style="vertical-align:middle">NotAdjustTotalReturn</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.ProductSalesInfoId</td>
                        <td class="text-center">@item.InvoiceNo</td>
                        <td class="text-center">@item.InvoiceDate</td>
                        <td class="hide">@item.StockiestId</td>
                        <td class="text-center">@item.StockiestName</td>
                        <td class="text-center">@item.TotalAmount</td>
                        <td class="text-center">@item.PaidAmount</td>
                        <td class="text-center">@item.DueAmount</td>
                        <td class="text-center">@item.AdjustTotalReturn</td>
                        <td class="text-center">@item.NotAdjustTotalReturn</td>
                        <td class="text-center">

                            <a href="#" class="btn btn-sm btn-outline-secondary data-item-detail" title="View Detail" data-item-detail="@item.SalesReturnId" style="line-height:1">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="12">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

