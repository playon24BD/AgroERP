@model IEnumerable<ERPBO.Agriculture.ViewModels.RawMaterialStockInfoViewModel>

@{
    ViewBag.Title = "_GetRawMaterialStockList";
    var sl = 0;
    var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;
}
<table class="table table-bordered table-sm table-striped table-responsive-lg text-sm" id="tblRawMaterialStockList">
    <thead class="btn-dark">
        <tr class="text-center text-bold">
            <th style="vertical-align:middle">#SL</th>
            <th style="vertical-align:middle" class="hide"></th>
            <th style="vertical-align:middle">StockDate</th>
            <th style="vertical-align:middle">StockIssueDate</th>
            <th style="vertical-align:middle">Status</th>
            <th style="vertical-align:middle">Raw Material Name</th>
            @*<th style="vertical-align:middle">Quantity</th>*@
            <th style="vertical-align:middle">Unit</th>


            <th style="vertical-align:middle">StockIn</th>
            <th style="vertical-align:middle">StockOut</th>
            @*<th style="vertical-align:middle">Current Stock</th>*@

            <th style="vertical-align:middle">Expire Date</th>
            @*<th style="vertical-align:middle">Action</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
        <tr>
            <td class="text-center text-bold">@sl</td>
            <td class="hide">@item.RawMaterialStockId</td>
            @*<td class="text-center">@item.StockDate</td>*@
            @if (Convert.ToString(item.StockDate.Value.Date) == "1/1/1900 12:00:00 AM")

            {
                <td class="text-center"></td>
            }
            else
            {
                <td class="text-center">@item.StockDate.Value.ToShortDateString()</td>
            }
            @if (Convert.ToString(item.StockIssueDate.Value.Date) == "1/1/1900 12:00:00 AM")

            {
                <td class="text-center"></td>
            }
            else
            {
                <td class="text-center">@item.StockIssueDate.Value.ToShortDateString()</td>
            }
            <td class="text-center">@item.Status</td>
            <td class="text-center">@item.RawMaterialName</td>
            @*<td class="text-center">@item.Quantity</td>*@
            <td class="text-center">@item.Unit</td>


            <td class="text-center">@item.StockIn</td>
            <td class="text-center">@item.StockOut</td>
            @*<td class="text-center">@item.TotalStock</td>*@
            @if (Convert.ToString(item.ExpireDate.Value.Date) == "1/1/1900 12:00:00 AM")

            {
                <td class="text-center"></td>
            }
            else
            {
                <td class="text-center">@item.ExpireDate.Value.ToShortDateString()</td>
            }


            @*<td class="text-center">

            <a href="#" class="btn btn-outline-secondary data-item-detail" title="View Detail" data-item-detail="@item.RawMaterialStockId" style="line-height:1">
                <i class="fas fa-eye"></i>
            </a>

            <a href="#" class="btn btn-outline-warning data-item-edit hide" title="Edit" data-edit-item="@item.RawMaterialStockId" style="line-height:1">
                <i class="fas fa-pen"></i>
            </a>

            <a href="#" class="btn btn-outline-danger data-item-del" title="Delete" data-del-item="@item.RawMaterialStockId" style="line-height:1">
                <i class="fas fa-trash"></i>
            </a>


        </td>*@
        </tr>
        }
        
    </tbody>
</table>