@model IEnumerable<ERPBO.Agriculture.ViewModels.PackageInfoViewModel>

@{

    ViewBag.Title = "List of Package";
    var SL = 0;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblPackageList">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">SL</th>
                    <th class="hide"></th>
                    <th style="vertical-align:middle">Package Code</th>
                    <th style="vertical-align:middle">Package Name</th>
                    <th style="vertical-align:middle">Total Amount</th>
                    <th style="vertical-align:middle">Start Date</th>
                    <th style="vertical-align:middle">End Date</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    if (DateTime.Now > @item.EndDate)
                    {
                        <tr>
                            <td class="text-center text-bold">@SL</td>
                            <td class="hide">@item.PackageId</td>
                            <td class="text-center">@item.PackageCode</td>
                            <td class="text-center">@item.PackageName</td>
                            <td class="text-center">@item.TotalAmount.ToString("0.00")</td>
                            <td class="text-center">@item.StartDate.Value.ToString("dd-MMM-yyy")</td>
                            <td class="text-center">@item.EndDate.Value.ToString("dd-MMM-yyyy")</td>
                            <td class="text-center">
                                <a href="#" class="emndetails-btn data-item-detail-PackageId" title="View Details" data-item-detail-PackageId="@item.PackageId" style="line-height:1"><i class="fas fa-eye"></i></a>

                            </td>
                        </tr>

                    }
                    else
                    {
                        <tr style="background-color:#3deb67">
                            <td class="text-center text-bold">@SL</td>
                            <td class="hide">@item.PackageId</td>
                            <td class="text-center">@item.PackageCode</td>
                            <td class="text-center">@item.PackageName</td>
                            <td class="text-center">@item.TotalAmount</td>
                            <td class="text-center">@item.StartDate.Value.ToString("dd-MMM-yyy")</td>
                            <td class="text-center">@item.EndDate.Value.ToString("dd-MMM-yyyy")</td>
                            <td class="text-center">
                                <a href="#" class="emndetails-btn data-item-detail-PackageId" title="View Details" data-item-detail-PackageId="@item.PackageId" style="line-height:1"><i class="fas fa-eye"></i></a>

                            </td>
                        </tr>

                    }

                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="12">
                            No Rows Found in the table
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>


</div>
