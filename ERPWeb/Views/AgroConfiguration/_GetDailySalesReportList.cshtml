

@model IEnumerable<ERPBO.Agriculture.ViewModels.AgroProductSalesInfoViewModel>

@{
    ViewBag.Title = "List of Daily Sales Report";
    var SL = 0;

    decimal tA = 0;
    decimal pA = 0;
    decimal dA = 0;
    double discountTk = 0;
    


}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblDailySalesReportListId">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Invoice Date</th>
                    <th style="vertical-align:middle">Invoice No</th>
                    <th style="vertical-align:middle">Territory Name</th>
                    <th style="vertical-align:middle">Stockiest Name</th>
                    <th style="vertical-align:middle">Total Amount</th>
                    <th style="vertical-align:middle">Paid Amount</th>
                    <th style="vertical-align:middle">Due Amount</th>
                    <th style="vertical-align:middle">Discount TK</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;

                    tA += item.InvoiceTk;
                    pA += item.PaymentAmount;
                    dA += item.DAmount;
                    discountTk += item.DiscountTK;


                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.ProductSalesInfoId</td>
                        <td class="text-center">@item.InvoiceDate.Value.ToString("dd.MMM.yyyy")</td>
                        <td class="text-center">@item.InvoiceNo</td>
                        <td class="text-center">@item.TerritoryName</td>
                        <td class="text-center">@item.StockiestName</td>
                        <td class="text-center">@item.InvoiceTk</td>
                        <td class="text-center">@item.PaymentAmount</td>
                        <td class="text-center">@item.DAmount</td>
                        <td class="text-center">@item.DiscountTK</td>

                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr style="background-color:lightgrey">
                    <td colspan="5" class="text-right font-weight-bold">Total</td>
                    <td class="text-right font-weight-bold text-center">@tA.ToString("0.00")</td>
                    <td class="text-right font-weight-bold text-center">@pA.ToString("0.00")</td>
                    <td class="text-right font-weight-bold text-center">@dA.ToString("0.00")</td>
                    <td class="text-right font-weight-bold text-center">@discountTk.ToString("0.00")</td>

                </tr>
            </tfoot>
        </table>
    </div>

</div>

