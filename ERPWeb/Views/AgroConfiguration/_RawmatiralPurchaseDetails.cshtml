@model IEnumerable<ERPBO.Agriculture.ViewModels.PRawMaterialStockIDetailsViewModel>

@{
    ViewBag.Title = "_GetFinishGoodRecipeDetail";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    int sl = 0;
    var info = (ERPBO.Agriculture.ViewModels.PRawMaterialStockInfoViewModel)ViewBag.Info;
}

<table class="table table-bordered table-striped table-sm table-responsive-lg text-sm">
    @if (info != null)
    {
    <tr>
        <td style="width:13%">Supplier Name</td>
        <td style="width:15%"><b>@info.RawMaterialSupplierName</b></td>
        <td style="width:18%">PO Number</td>
        <td style="width:20%"><b>@info.BatchCode</b></td>

        <td style="width:13%">Total Amount</td>
        <td style="width:20%"><b>@info.TotalAmount</b></td>
        @*<td style="width:20%"><b>@info.UnitName</b></td>
        <td style="width:20%" class="hide"><b>@info.UnitId</b></td>*@
    </tr>
    }
</table>
<table class="table table-bordered table-striped table-sm table-responsive-lg text-sm" id="tblReturnItems">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>#SL</th>
            <th>RawMaterial Name</th>
            <th>Qty</th>
            <th>Unit</th>
            <th>Unit Price</th>
            <th>SubTotal</th>
            <th>StockDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center">@sl</td>
                <td class="text-center">@item.RawMaterialName</td>
                <td class="text-center text-bold">@item.Quantity</td>
                <td class="text-center">@item.UnitName</td>
                <td class="text-center">@item.UnitPrice</td>
                <td class="text-center">@item.SubTotal</td>
                <td class="text-center">@item.StockDate.Value.ToString("dd.MMM.yyyy")</td>

            </tr>
        }
    </tbody>
</table>

