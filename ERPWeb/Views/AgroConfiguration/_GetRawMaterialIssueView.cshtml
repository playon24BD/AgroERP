@model IEnumerable<ERPBO.Agriculture.ViewModels.MRawMaterialIssueStockDetailsViewModel>

@{
    ViewBag.Title = "List of RawMaterialIssue Stock";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblDepotData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">RawMaterial Name</th>
                    <th style="vertical-align:middle">Unit Name</th>
                    <th style="vertical-align:middle">Total IN</th>
                    <th style="vertical-align:middle">Total OUT</th>
                    <th style="vertical-align:middle">Good Return</th>
                    <th style="vertical-align:middle">Bad Return</th>
                    <th style="vertical-align:middle">TotalReturn</th>
                    <th style="vertical-align:middle">Total Remain</th>
                    @*<th style="vertical-align:middle">Action</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>
                        <td class="hide">@item.RawMaterialId</td>
                        @*<td class="hide">@item.OrganizationId</td>*@
                        <td class="text-center">@item.RawMaterialName</td>
                        <td class="text-center">@item.UnitName</td>
                        <td class="text-center">@item.StockIN</td>
                        <td class="text-center">@item.StockOut</td>
                        <td class="text-center">@item.GoodReturn</td>
                        <td class="text-center">@item.BadReturn</td>
                        <td class="text-center">@item.ReturnQty</td>
                        <td class="text-center">@item.CurrentStock</td>
                        @*<td class="text-center">
                            <a href="#" class="btn btn-warning btn-sm data-edit-item-Region" style="line-height:1" data-edit-item-Region="@item.RegionId"><i class="fa fa-pen"></i> Edit</a>
                        </td>*@
                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>