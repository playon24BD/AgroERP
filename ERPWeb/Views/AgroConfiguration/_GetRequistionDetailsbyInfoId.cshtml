@model IEnumerable<ERPBO.Agriculture.ViewModels.RawMaterialRequisitionDetailsViewModel>

@{

    int sl = 0;
}
<div class="col-md-12">
    <table class="table table-responsive-lg">
        <thead>
            <tr class="text-sm btn-dark">
                <th>#SL</th>
                <th>Raw Material Name</th>
                <th>Unit</th>
                <th>Requisition Quantity</th>
                <th>Issue Quantity</th>
                <th>Status</th>
                <th>Remarks</th>
                <th>Entry Date</th>


            </tr>

        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    sl++;
            <tr>
                <td>@sl</td>
                <td>@item.RawMaterialName</td>
                <td>@item.UnitName</td>
                <td>@item.RequisitionQuantity</td>

                <td style="width:10%">
                    <input type="number" class="issueQty form-control form-control-sm " value="0" />
                    <span class="error hide">Quantity must be <=available Quantity</span>
                </td>
                <td>@item.Status</td>
                <td>@item.Remarks</td>
                <td>@item.EntryDate</td>


            </tr>

                }


            }
            else
            {
                <tr>
                    <td colspan="7"></td>

                </tr>

            }


        </tbody>

    </table>

</div>

