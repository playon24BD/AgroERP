
@model IEnumerable<ERPBO.Agriculture.ViewModels.PaymentMoneyReciptViewModel>

@{
    
    ViewBag.Title = "List of Money Receipt";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblMoneyReceipt">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Stockiest Name</th>
                    <th style="vertical-align:middle">Memo No</th>
                    <th style="vertical-align:middle">Bank Name</th>
                    <th style="vertical-align:middle">Branch Name</th>
                    <th style="vertical-align:middle">Total Amount</th>
                    @*<th style="vertical-align:middle">Due Amount</th>*@
                    <th style="vertical-align:middle">Date</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    SL = SL + 1;
                    <tr>

                        <td class="text-center text-bold">@SL</td>

                        <td class="hide">@item.PaymentMoneyReciptId</td>
                        <td class="text-center">@item.StockiestName</td>
                        <td class="text-center">@item.MoneyReciptNo</td>
                        <td class="text-center">@item.BankName</td>
                        <td class="text-center">@item.BranchName</td>
                        <td class="text-center">@item.TotalAmount</td>
                        @*<td class="text-center">@item.DueAmount</td>*@
                        <td class="text-center">@item.EntryDate.Value.ToString("dd-MMM-yyyy")</td>

                        <td class="text-center">
                            <a href="#" class="btn btn-sm btn-outline-secondary data-item-detail" title="View Detail" data-item-detail="@item.PaymentMoneyReciptId" style="line-height:1">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>


                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="12">
                            No Rows Found in the table
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
