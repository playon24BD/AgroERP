
@model IEnumerable<ERPBO.Agriculture.ViewModels.AccessoriesTrackInfoViewModel>

@{
    ViewBag.Title = "List of Accessories Stock";
    var SL = 0;
}
<div class="row">
    <div class="col-md-12 p-0">
        <table class="table table-bordered table-striped table-hover table-sm text-sm" id="tblAccessoriesStock">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Accessories Name</th>
                    <th style="vertical-align:middle">Stock In</th>
                    <th style="vertical-align:middle">Stock Out</th>
                    <th style="vertical-align:middle">TotalStock</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    SL = SL + 1;
                <tr>

                    <td class="text-center text-bold">@SL</td>
                    <td class="hide">@item.AccessoriesId</td>
                    <td class="text-center">@item.AccessoriesName</td>
                    <td class="text-center">@item.StockIn</td>
                    <td class="text-center">@item.StockOut</td>
                    <td class="text-center">@item.TotalStock</td>

                </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

