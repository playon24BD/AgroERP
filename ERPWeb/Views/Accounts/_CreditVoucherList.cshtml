@model IEnumerable<ERPBO.Accounts.ViewModels.JournalViewModel>
@{
    Layout = null;
    int sl = 0;
}
<div class="col-md-12 text-sm">
    <table class="table table-bordered table-sm table-striped tblCreditVoucherList" id="tblCreditVoucherList">
        <thead class="btn-dark">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th style="vertical-align:middle">V Date</th>
                <th style="vertical-align:middle">V No.</th>
                <th style="vertical-align:middle">Narration</th>
                <th style="vertical-align:middle">Remarks</th>
                <th style="vertical-align:middle">Cr.</th>
                <th style="vertical-align:middle">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jor in Model)
            {
                sl = sl + 1;
                string journaldate = jor.JournalDate != null ? jor.JournalDate.Value.ToString("dd-MMM-yyy") : "";
                <tr>
                    <td class="text-center">@sl</td>
                    <td>@journaldate</td>
                    <td>@jor.VoucherNo</td>
                    <td>@jor.Narration</td>
                    <td>@jor.Remarks</td>
                    <td class="text-center">@jor.Credit</td>
                    <td class="text-center">
                        <a href="#" class="btn btn-outline-danger btn-sm data-del-item-credit" title="Delete" data-del-item-credit="@jor.VoucherNo"><i class="far fa-trash-alt"></i> </a>
                    </td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="7">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


